<%- include("../partials/header.ejs")  %> 
<%- include("../partials/navbar.ejs")  %> 

<div class="container my-5">
  <div class="row my-3 ">
    <h4>Perbandingan Performa k-fold Cross Validation</h4>
    <div>
      <div class="w-25 mb-3">
        <div class="d-flex">
          <input name="k" id="k" placeholder="inputkan k" class="form-control mx-2" type="number">
          <button class="form-control btn btn-outline-primary proses">Proses</button>
        </div>
      </div>
    </div>
    <table class="table table-striped table-bordered table-hover w-75 m-auto">
      <thead  style="background-color: black;" class="text-center text-white">
        <tr>
          <th scope="col">Iterasi</th>
          <th scope="col">Accuracy</th>
          <th scope="col">Precision</th>
          <th scope="col">Recall</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% for( let index = 0; index < panjang; index++ ) { %>
          <tr>
            <th scope="row"><%= index+1  %></th>
            <td id="acc<%= index %>">Mark</td>
            <td id="pre<%= index  %>">Otto</td>
            <td id="rec<%= index %>">@mdo</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div id="tes"></div>
      <canvas id="myChartAccuracy"></canvas>
    </div>
    <div class="col-lg-6">
      <canvas id="myChartPrecision"></canvas>
    </div>
    <div class="col-lg-6 mt-4">
      <canvas id="myChartRecall"></canvas>
    </div>
  </div>
</div>


<%- include("../partials/footer.ejs")  %> 